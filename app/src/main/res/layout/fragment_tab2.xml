<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.farm.Tab2Fragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:chipSpacingHorizontal="13dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle_farm"
                    android:background="@drawable/farm_choice_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="전체"
                    android:textSize="12sp"
                    android:checkable="true"
                    app:chipMinHeight="50dp"
                    app:chipCornerRadius="7dp"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle_farm"
                    android:background="@drawable/farm_choice_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="분양중"
                    android:textSize="12sp"
                    android:checkable="true"
                    app:chipMinHeight="50dp"
                    app:chipCornerRadius="7dp"
                    />

                <com.google.android.material.chip.Chip
                    style="@style/CustomChipStyle_farm"
                    android:background="@drawable/farm_choice_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="분양완료"
                    android:textSize="12sp"
                    android:checkable="true"
                    app:chipMinHeight="50dp"
                    app:chipCornerRadius="7dp"
                    />
            </com.google.android.material.chip.ChipGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tab2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/chip_group"
                tools:listitem="@layout/rv_my_farm_item"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>

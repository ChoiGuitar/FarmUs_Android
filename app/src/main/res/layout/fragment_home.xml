<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/home_fragment_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!--            전체 화면 Layout-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".MainActivity"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/alarm_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/btn_alarm"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginStart="308dp"
                        android:src="@drawable/alarm_vector_image"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--메인 로고-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/farmus_main_logo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/alarm_bar"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/farmus_kr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/line_seed_kr_rg"
                        android:letterSpacing="-0.03"
                        android:textColor="@color/main"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/farmus_logo"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="파머스" />

                    <ImageView
                        android:id="@+id/farmus_logo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/farmus_logo_vector_image_"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/farmus_kr"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--메인 검색 바-->
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search_bar"
                    style="@style/Body2Reg"
                    android:layout_width="328dp"
                    android:layout_height="48dp"
                    android:background="@drawable/search_bar_selector"
                    android:drawableStart="@drawable/search_vector_image_green"
                    android:hint="@string/search_bar_hint_text"
                    android:inputType="text"
                    android:padding="1dp"
                    android:textColorHint="@color/gray_first"
                    android:layout_marginTop="26dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/farmus_main_logo"
                    />


                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintTop_toBottomOf="@id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <LinearLayout
                            android:id="@+id/surrounding_farm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toTopOf="@id/rv_home_farm"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                style="@style/Title3"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="3dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="파머스 추천 농장"
                                android:textColor="@color/text_1"/>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <!--더보기 클릭-->
                            <TextView
                                android:id="@+id/btn_show_more_farm"
                                style="@style/Body1Reg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="더보기"
                                android:textSize="16sp"
                                android:textColor="@color/text_3"
                                android:gravity="center"
                                app:drawableEndCompat="@drawable/next_vector_image"
                                app:drawableTint="@color/text_3" />

                        </LinearLayout>

                        <!--우리 동네 농장 리사이클러뷰-->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_home_farm"
                            android:layout_width="match_parent"
                            android:layout_height="566dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="17dp"
                            app:layout_constraintTop_toBottomOf="@id/surrounding_farm"
                            tools:listitem="@layout/rv_local_farm" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--구분선-->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:background="@drawable/rectangle_section_line_vector_image"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />


                        <!--농부를 위한 추천 콘텐츠-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                            >

                            <LinearLayout
                                android:id="@+id/rec_contents_for_farmer"
                                android:layout_width="match_parent"
                                android:layout_height="32sp"
                                android:orientation="horizontal"
                                android:layout_marginTop="29dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <TextView
                                    android:id="@+id/text_recommend_contents"
                                    style="@style/Title3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25sp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:text="농부를 위한 추천 콘텐츠"
                                    android:textColor="@color/text_1"
                                    android:textSize="20sp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="3dp"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:id="@+id/btn_show_more_contents"
                                    style="@style/Body1Reg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="더보기"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_3"
                                    android:gravity="center"
                                    app:drawableEndCompat="@drawable/next_vector_image"
                                    app:drawableTint="@color/text_3" />


                            </LinearLayout>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_rec_contents"
                                android:layout_width="match_parent"
                                android:layout_height="250dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="71dp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginRight="16dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:listitem="@layout/rv_recommend_farm_for_farmer" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

<!--        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/select_fragment_bottom_navi"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@color/gray_third"
            android:theme="@style/Body3Med"
            app:itemIconTint="@drawable/select_fragment_bottom_navi_selector"
            app:itemTextColor="@drawable/select_fragment_bottom_navi_selector"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_navi_menu"
            />-->
    </LinearLayout>

</FrameLayout>
    <!--주의: LinearLayout 혹은 FrameLayout 중 하나만 있어도 된다!-->

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomChipStyle_filter" parent = "Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/filter_chip_bg_color</item>
        <item name="android:textColor">@color/filter_chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo2</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="CustomChipStyle_areaChoice" parent = "Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor" >@color/choice_chip_bg_color</item>
        <item name="android:textColor">@color/choice_chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo2</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="ShapeAppearanceOverlay_cornerSize50" parent="" >
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>
    
    <style name="CustomCalendarView" parent="Theme.AppCompat">
        <item name="fontFamily">@font/spoqa_han_sans_neo1</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="@style/Body2Reg">
        <item name="android:textColor">@color/text_2</item>
    </style>
    <style name="CalenderViewWeekCustomText" parent="@style/Body2Med">
        <item name="android:textColor">@color/text_2</item>
    </style>
    <style name="CalendarWidgetHeader" parent="@style/Body1Bold">
        <item name="android:textColor">@color/text_1</item>
    </style>

    <style name="CustomHeartBookMark">
        <item name="android:drawable">@drawable/heart_selector</item>
    </style>

    <style name="BottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="background">@android:color/transparent</item>
    </style>

</resources>



